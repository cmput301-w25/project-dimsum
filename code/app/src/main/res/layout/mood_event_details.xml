<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat_image" />

    <TextView
        android:id="@+id/mood_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/mood_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Situation"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/mood_trigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trigger"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/mood_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/mood_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:paddingTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/button_edit_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/button_delete_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
