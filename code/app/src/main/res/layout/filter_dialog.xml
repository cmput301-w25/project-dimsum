<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/check_recent_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_label_time"/>

    <!-- For multiple mood selection, you could use a MultiAutoCompleteTextView,
         a custom multi-select Spinner, or a list of checkboxes.
         Here is a simple approach with a Spinner that picks ONE mood at a time,
         plus a button to add it to a list: -->
    <Spinner
        android:id="@+id/spinner_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_add_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"/>

    <!-- Single-word filter -->
    <EditText
        android:id="@+id/edit_filter_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/filter_label_word"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_cancel" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_save"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>
